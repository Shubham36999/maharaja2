<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Daily Devotional</title>
  <link rel="stylesheet" href="/style.css" />
  <style>
    body::before {
      content: "";
      position: fixed;
      top: 0; left: 0;
      width: 100%;
      height: 100%;
      background: url('/images/daily/<%= imageName %>') no-repeat center center;
      background-size: cover;
      filter: blur(15px) brightness(0.6);
      z-index: -1;
    }

    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    header {
      text-align: center;
      padding: 10px 0;
    }

    #logo {
      width: 100px;
    }

    main {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .image-wrapper {
      width: 90%;
      max-width: 400px;
    }

    #daily-image {
      width: 100%;
      border-radius: 15px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
    }

    .button-group {
      margin-top: 15px;
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
      justify-content: center;
    }

    .btn {
      padding: 8px 16px;
      background-color: #f3e5ab;
      border: none;
      border-radius: 8px;
      font-weight: bold;
      cursor: pointer;
      text-decoration: none;
      color: black;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    }

    .btn:hover {
      background-color: #edd97e;
    }

    #about-btn {
      margin: 20px auto 0;
      display: block;
    }

    footer {
      text-align: center;
      padding: 10px 8px;
      font-size: 0.85rem;
      background-color: rgba(255, 255, 255, 0.6);
      font-weight: 500;
    }
  </style>
</head>
<body>
  <header>
    <img src="/logo.png" alt="Devotional Logo" id="logo">
  </header>

  <main>
    <div class="image-wrapper">
      <img id="daily-image" src="/images/daily/<%= imageName %>?v=<%= Date.now() %>" alt="Devotional Image of the Day"
           onerror="this.src='/images/daily/default.png'" />
    </div>

    <div class="button-group">
      <button class="btn" onclick="forceDownload()">Download</button>
      <button class="btn" onclick="shareImage()">Share</button>
    </div>

    <button id="about-btn" class="btn" onclick="showAbout()">About Developer</button>
  </main>

  <footer>
    Developed by Shubham Nitin Kulkarni<br />
    © 2025 Copyrighted by<br />
    P. P. Shri Pralhad Maharaj Sansthan Sakhar Kherda
  </footer>

  <script>
    async function forceDownload() {
      const imageURL = "<%= absoluteImageURL %>";
      const filename = "<%= imageName %>";

      try {
        const response = await fetch(imageURL);
        const blob = await response.blob();
        const blobUrl = window.URL.createObjectURL(blob);

        const a = document.createElement("a");
        a.href = blobUrl;
        a.download = filename;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);

        window.URL.revokeObjectURL(blobUrl);
      } catch (err) {
        alert("Download failed. Please try again.");
        console.error(err);
      }
    }

    async function shareImage() {
      const imageURL = "<%= absoluteImageURL %>";
      const filename = "<%= imageName %>";

      try {
        const response = await fetch(imageURL);
        const blob = await response.blob();
        const file = new File([blob], filename, { type: blob.type });

        if (navigator.canShare && navigator.canShare({ files: [file] })) {
          await navigator.share({
            title: 'Daily Devotional Image',
            text: 'Check out today’s devotional image.',
            files: [file]
          });
        } else {
          alert("Sharing is not supported on this device.");
        }
      } catch (err) {
        alert("Sharing failed or was cancelled.");
        console.error(err);
      }
    }

    function showAbout() {
      alert(
        "This devotional app is developed by Shubham Nitin Kulkarni.\n\n" +
        "Purpose:\nTo provide daily blessings and darshan to devotees of Shri Pralhad Maharaj " +
        "through a new image every day that updates automatically."
      );
    }

    // Auto-refresh the page after 11:59 PM
    (function scheduleRefreshAtMidnight() {
      const now = new Date();
      const millisTill1159 = new Date(
        now.getFullYear(),
        now.getMonth(),
        now.getDate(),
        23, 59, 0, 0
      ) - now;

      if (millisTill1159 > 0) {
        setTimeout(() => location.reload(), millisTill1159 + 1000);
      }
    })();
  </script>
</body>
</html>
