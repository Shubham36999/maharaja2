<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Daily Devotional</title>
  <link rel="stylesheet" href="/style.css" />
  <style>
    body::before {
      content: "";
      position: fixed;
      top: 0; left: 0;
      width: 100%;
      height: 100%;
      background: url('/images/daily/<%= imageName %>') no-repeat center center;
      background-size: cover;
      filter: blur(15px) brightness(0.6);
      z-index: -1;
    }

    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    header {
      text-align: center;
      padding: 10px 0;
    }

    #logo {
      width: 100px;
    }

    main {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .image-wrapper {
      width: 90%;
      max-width: 400px;
    }

    #daily-image {
      width: 100%;
      border-radius: 15px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
    }

    .button-group {
      margin-top: 15px;
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      justify-content: center;
    }

    .btn {
      padding: 8px 16px;
      background-color: #f3e5ab;
      border: none;
      border-radius: 8px;
      font-weight: bold;
      cursor: pointer;
      text-decoration: none;
      color: black;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    }

    .btn:hover {
      background-color: #edd97e;
    }

    #whatsapp-share {
      background-color: #25D366;
      color: white;
    }

    #about-btn {
      margin: 20px auto 0;
      display: block;
    }

    footer {
      text-align: center;
      padding: 10px 8px;
      font-size: 0.85rem;
      background-color: rgba(255, 255, 255, 0.6);
      font-weight: 500;
    }
  </style>
</head>
<body>
  <header>
    <img src="/logo.png" alt="Devotional Logo" id="logo">
  </header>

  <main>
    <div class="image-wrapper">
      <img id="daily-image" src="/images/daily/<%= imageName %>?v=<%= Date.now() %>"
           alt="Devotional Image of the Day"
           onerror="this.src='/images/daily/default.png'" />
    </div>

    <div class="button-group">
      <a id="download-btn" href="/images/daily/<%= imageName %>" download class="btn">Download</a>
      <button class="btn" onclick="shareImage()">Share</button>
      <a class="btn" id="whatsapp-share"
         href="https://wa.me/?text=ðŸ™ Today's Devotional Image ðŸ™%0A<%= absoluteImageURL %>"
         target="_blank">
         Share on WhatsApp
      </a>
    </div>

    <button id="about-btn" class="btn" onclick="showAbout()">About Developer</button>
  </main>

  <footer>
    Developed by Shubham Nitin Kulkarni<br />
    Â© 2025 Copyrighted by<br />
    P. P. Shri Pralhad Maharaj Sansthan Sakhar Kherda
  </footer>

  <script>
    function isAndroidWebView() {
      const ua = navigator.userAgent || navigator.vendor || window.opera;
      return /android/i.test(ua) && !navigator.canShare;
    }

    async function shareImage() {
      const imageUrl = "<%= absoluteImageURL %>";

      if (isAndroidWebView()) {
        try {
          await navigator.share({
            title: 'Daily Devotional Image',
            text: 'See todayâ€™s devotional image.',
            url: imageUrl
          });
        } catch (err) {
          alert('Sharing was cancelled or failed.');
        }
        return;
      }

      try {
        const response = await fetch(imageUrl);
        const blob = await response.blob();
        const file = new File([blob], "<%= imageName %>", { type: blob.type });

        if (navigator.canShare && navigator.canShare({ files: [file] })) {
          await navigator.share({
            title: 'Daily Devotional Image',
            text: 'Check out todayâ€™s devotional image.',
            files: [file]
          });
        } else {
          throw new Error("File sharing not supported");
        }
      } catch (err) {
        alert("Sharing is not supported or failed.");
      }
    }

    function showAbout() {
      alert(
        "This devotional app is developed by Shubham Nitin Kulkarni.\n\n" +
        "Purpose:\nTo provide daily blessings and darshan to devotees of Shri Pralhad Maharaj " +
        "through a new image every day that updates automatically."
      );
    }

    (function refreshAtMidnight() {
      const now = new Date();
      const millisTill1159 = new Date(
        now.getFullYear(),
        now.getMonth(),
        now.getDate(),
        23, 59, 0, 0
      ) - now;

      if (millisTill1159 > 0) {
        setTimeout(() => location.reload(), millisTill1159 + 1000);
      }
    })();
  </script>
</body>
</html>
